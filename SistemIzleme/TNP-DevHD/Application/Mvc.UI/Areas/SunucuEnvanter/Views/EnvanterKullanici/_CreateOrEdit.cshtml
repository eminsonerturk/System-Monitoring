@model Application.ViewModels.Envanter.KullaniciCrudViewModel
@Html.HiddenFor(p => p.Id)
<div class="form-group">
    @Html.LabelFor(p => p.KullaniciEMail, new { @class = "col-lg-2 control-label" })
    <div class="col-lg-3">
        @Html.REditorFor(p => p.KullaniciEMail)
        @Html.ValidationMessageFor(p => p.KullaniciEMail)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(p => p.KullaniciAd, new { @class = "col-lg-2 control-label" })
    <div class="col-lg-3">
        @Html.REditorFor(p => p.KullaniciAd)
        @Html.ValidationMessageFor(p => p.KullaniciAd)
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(p => p.IsAdmin, new { @class = "col-lg-2 control-label" })
    <div class="col-lg-3">
        @Html.REditorFor(p => p.IsAdmin)
        @Html.ValidationMessageFor(p => p.IsAdmin)
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#KullaniciEMail").change(function () {
            var kendoComBox = $("#KullaniciEMail").data("kendoComboBox");
            if (kendoComBox.selectedIndex > 0) {
                $("#KullaniciAd").val(kendoComBox.dataItem(kendoComBox.select()).DisplayName);
            }
            else {
                $("#KullaniciAd").val("");
            }
        });
    });
</script>